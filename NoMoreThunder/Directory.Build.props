<?xml version="1.0" encoding="utf-8"?>
<!-- This file contains project properties used by the build. -->
<Project>

  <!-- Plugin Metadata -->
  <PropertyGroup>
    <PluginId>NoMoreThunder</PluginId>
    <PluginName>NoMoreThunder</PluginName>
    <Authors>qqrz997</Authors>
    <Version>1.0.0</Version>
    <GameVersion>1.40.0</GameVersion>
    <Description>Removes the audio from the lightning in the Metallica main menu.</Description>
  </PropertyGroup>

  <!-- Plugin Dependencies -->
  <ItemGroup>
    <DependsOn Include="BSIPA" Version="^4.3.5"/>
    <DependsOn Include="SiraUtil" Version="^3.1.14"/>
  </ItemGroup>

  <PropertyGroup>
    <BSMTProjectType>BSIPA</BSMTProjectType>
    <GenerateManifest>true</GenerateManifest>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)' != 'Release'">
    <DisableZipRelease>true</DisableZipRelease>
  </PropertyGroup>

</Project>